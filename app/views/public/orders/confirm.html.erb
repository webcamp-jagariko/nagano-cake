<div class="container margin-y">
<h4>注文情報確認</h4>
  <div class="row margin-y">
     <table class="table table-bordered col-7">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td class="d-flex align-items-center py-0">
            <%= image_tag cart_item.item.image, style: "height: 40px" %>
            <span style="padding: 12px">
              <%= cart_item.item.name %>
            </span>
          </td>
          <td><%= (cart_item.item.price * 1.1).floor.to_s(:delimited) %>円</td>
          <td><%= cart_item.quantity %></td>
          <td><%= (cart_item.item.price * 1.1 * cart_item.quantity ).floor.to_s(:delimited) %>円</td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <table class="table table-bordered col-4 offset-1">
      <tbody>
        <tr>
          <td>送料</td>
          <td><%= @postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td><%= @subtotal.to_s(:delimited) %></td>
        </tr>
        <tr>
          <td>請求金額</td>
          <td><%= @total.to_s(:delimited) %></td>
        </tr>
      </tbody>
    </table>
  </div>
    <%= form_with model: @order, url: orders_path, local: true do |f| %>
    <div>
      <div class="row">
        <h4>支払方法</h4>
      <p class="margin-x"><%= @order.payment_method_i18n %></p>
        <%= f.hidden_field :payment_method, :value => @order.payment_method %>
      </div>

      <div class="row">
        <h4>お届け先</h4>
        <p class="margin-x">
          <%= @order.post_code %>
          <%= f.hidden_field :post_code, :value => @order.post_code %>
          <%= @order.address %></br>
          <%= f.hidden_field :address, :value => @order.address %>
          <%= @order.name %></br>
          <%= f.hidden_field :name, :value => @order.name %>
        </p>
      </div>
    </div>

    <div class="text-right">
      <%= link_to "情報入力へ戻る", orders_new_path %>
    </div>
    <div class="text-center">
      <%= f.submit "購入を確定する", class: "btn btn-success btn-lg text-center" %>
    </div>
    <% end %>


  </div>