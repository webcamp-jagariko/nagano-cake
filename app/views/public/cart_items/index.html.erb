<div class="container">
  <div class="sub_container_position ml-5">
    <h4><span>ショッピングカート</span></h4>

    <% total = 0 %>
    <% if current_customer.cart_items.present? %>
    <%= link_to "カートを空にする", all_destroy_cart_items_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <% if cart_item.item.image.attached? %>
              <%= image_tag cart_item.item.image, size: "100x80" %>
            <% else %>
              <%= image_tag 'no_image', size: "100x80" %>
            <% end %><%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
            <%= f.number_field :quantity, min: 1, max:10, id: "quantity_cart" %>
            <%= f.submit "変更", class: "btn btn-success" %>
            <% end %>
          </td>
          <td>
            <% subtotal = ((cart_item.item.add_tax_price * cart_item.quantity).to_i) %>
            <%= subtotal.to_s(:delimited) %>
          </td>
          <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger" %></td>
        </tr>
        <% total += subtotal %>
        <% end %>
        <% else %>
          <h5>カートは空です</h5>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-3">
      <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
    </div>
    <div class="col-3">
      <table class="table table-borderd">
        <tr>
          <td>合計金額</td>
          <td><%= total.to_s(:delimited) %></td>
        </tr>
      </table>
     </div>
  </div>
</div>
</div class="container">
  <div class="row">
    <div class="col-10 text-center">
       <%= link_to "情報入力に進む", orders_new_path, class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>



