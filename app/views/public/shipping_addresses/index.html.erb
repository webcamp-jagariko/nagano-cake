<div class="container">
  <h2>配送先登録/一覧</h2>
    <%= form_with model: @shipping_address, url: shipping_addresses_path do |f| %>
      <div class="col-xs-10">
        <div class="form-group col-xs-9">
          <%= f.label :post_code, "郵便番号", placeholder: "example@example.com", class: "col-sm-4 from-control" %>
          <%= f.text_field :post_code, placeholder: "0000000", class: "col-sm-3" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :address, "住所", class: "col-sm-4 from-control" %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-sm-6" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :name, "宛名", class: "col-sm-4 from-control" %>
          <%= f.text_field :name, placeholder: "令和道子", class: "col-sm-3" %>
          <%= f.submit '新規登録' ,class: "btn btn-success" %>
        </div>
      </div>
    <% end %>

  <table class="table" >
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>メールアドレス</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @shipping_addresses.each do |shipping_address| %>
        <tr>
          <td><%= shipping_address.post_code %></td>
          <td><%= shipping_address.address %></td>
          <td><%= shipping_address.name %></td>
          <td>
            <%= link_to '編集する', edit_shipping_address_path(shipping_address), class: "btn btn-sm btn-success" %>
          </td>
          <td>
            <%= link_to '削除する', shipping_address_path(shipping_address), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>