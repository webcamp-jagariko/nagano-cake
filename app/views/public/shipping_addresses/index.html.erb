<div class="container">
  <h2>配送先登録/一覧</h2>
    <%= form_with model: @shipping_address, url: public_shipping_addresses_path do |f| %>
      <div class="col-xs-10">
        <div class="form-group col-xs-9">
          <%= f.label :"郵便番号", placeholder: "example@example.com", class: "col-sm-4 from-control" %>
          <%= f.text_field :post_code, placeholder: "0000000", class: "col-sm-3" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"住所", class: "col-sm-4 from-control" %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-sm-6" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"宛名", class: "col-sm-4 from-control" %>
          <%= f.text_field :name, placeholder: "令和道子", class: "col-sm-3" %>
          <%= f.submit '新規登録' ,class: "btn btn-success" %>
        </div>
      </div>
    <% end %>

  <div class="col-xs-10">
    <table class="table customer-table">
      <thead>
        <tr>
          <th class="active">郵便番号</th>
          <th class="active">住所</th>
          <th class="宛名">メールアドレス</th>
        </tr>
      </thead>
      <tbody>
        <% @shipping_addresses.each do |shipping_address| %>
          <tr>
            <td>
              <%= shipping_address.post_code %>
            </td>
            <td>
              <%= shipping_address.address %>
            </td>
            <td>
              <%= shipping_address.name %>
            </td>
            <td>
              <%= link_to '編集する', edit_public_shipping_address_path(shipping_address), class: "btn btn-sm btn-success" %>
              <%= link_to '削除する', public_shipping_address_path(shipping_address), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>