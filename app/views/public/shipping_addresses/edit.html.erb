<div class="container">
  <h2>配送先編集</h2>
    <%= form_with model: @shipping_address, url: public_shipping_address_path do |f| %>
      <div class="col-xs-10">
        <div class="form-group col-xs-9">
          <%= f.label :"郵便番号", placeholder: "example@example.com", class: "col-sm-4 from-control" %>
          <%= f.text_field :post_code, placeholder: "0000000", class: "col-sm-3" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"住所", class: "col-sm-4 from-control" %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "col-sm-6" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"宛名", class: "col-sm-4 from-control" %>
          <%= f.text_field :name, placeholder: "令和道子", class: "col-sm-3" %>
          <%= f.submit '変更内容を保存' ,class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
</div>
