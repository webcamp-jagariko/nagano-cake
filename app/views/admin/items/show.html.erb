<div class="container">

  <h4 class="margin-y">商品詳細</h4>
  <div class='row align-items-center justify-content-center'>
    <div class='col-md-4 admin-item-image' >
      <%= image_tag @item.get_image(350, 200), class: "admin-item-image-fit", style: "width: 100%; height: 200px;" %>
    </div>

      <div class='col-md-8 mt-3'>
        <table class="table ">
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>
              税込価格
              <br>
              (税抜価格)
            </td>
            <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.is_active == true %>
                <p class="text-success">販売中</p>
              <% else %>
                <p class="text-danger">販売停止中</p>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
      <div class="text-center">
          <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success padding-x" %>
      </div>

  </div>
</div>