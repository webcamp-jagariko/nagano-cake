<div class="container" style="width: fit-content">

  <div class="sub_container_position">
    <h4><span>商品詳細</span></h4>
  <div class='row'>
    <div class='col-md-5 mt-3'>
      <div class="field">
        <% if @item.image.attached? %>
          <%= image_tag @item.image, size: "300x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "300x200" %>
        <% end %>
      </div>
    </div>

      <div class='col-md-7 mt-3'>
        <table class="table ">
          <tr>
            <th>商品名</th>
            <th><%= @item.name %></th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th><%= @item.introduction %></th>
          </tr>
          <tr>
            <th>ジャンル</th>
            <th><%= @item.genre.name %></th>
          </tr>
          <tr>
            <th>税込価格<br>
        (税抜価格)</th>
            <th><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</th>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <th><% if @item.is_active == true %>
              販売中
            <% else %>
              販売停止中
            <% end %></th>
          </tr>
        </table>
          <%= link_to "編集する", edit_admin_item_path(@item.id) %>
      </div>
  </div>
  </div>
</div>