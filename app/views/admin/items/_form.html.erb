<div class="field margin-y">
  <div class="d-flex padding-sm-y">
    <%= f.label :image, "商品画像", class: "label-width" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  
  <div class="d-flex padding-sm-y">
    <%= f.label :name, "商品名", class: "label-width" %>
    <%= f.text_field :name, placeholder: "商品名", class: "field-width" %>
  </div>
  
  <div class="d-flex padding-sm-y">
    <%= f.label :introduction, "商品説明", class: "label-width" %>
    <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "field-width" %>
  </div>
  
  <div class="d-flex padding-sm-y">
    <%= f.label :genre_id, "ジャンル", class: "label-width" %>
    <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "--選択してください--" %>
  </div>
  
  <div class="d-flex padding-sm-y">
    <%= f.label :price, "税抜価格", class: "label-width" %>
    <%= f.number_field :price, placeholder: "1000", class: "field-width" %>
    <span>円</span>
  </div>
  
  <div class="d-flex padding-sm-y">
    <p class="label-width label-name">販売ステータス</p>
    <span>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active_true, "販売中" %>
    </span>
    <span class="margin-x">
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active_false, "販売停止中" %>
    </span>
  
  </div>
  </div>