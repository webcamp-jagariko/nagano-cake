<div class="container" style="width: fit-content">
  <div class="sub_container_position">
    <h4><span>商品一覧</span></h4>
    <% @items.each do |item| %>

    <table class='table'>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price %></td>
          <td><%= item.genre_id %></td>
          <td><% if item.is_active == true %>
              販売中
            <% else %>
              販売停止中
            <% end %></td>
        </tr>
      </tbody>
    </table>
    <% end %>

</div>


</div>

