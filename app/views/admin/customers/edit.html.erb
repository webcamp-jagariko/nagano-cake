<div class="container">

    <h1><%= (@customer.last_name + @customer.first_name) %>さんの会員編集画面</h1>
    <%= form_with model: @customer, url: admin_customer_path do |f| %>

      <div class="col-xs-10">
        <div class="form-group col-xs-9">
          <%= f.label :"会員ID", class: "col-sm-4 from-control" %>
          <%= f.label :"#{@customer.id}" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"氏名", class: "col-sm-4 from-control" %>
          <%= f.text_field :last_name, class: "col-sm-3" %>
          <%= f.text_field :first_name, class: "col-sm-3" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"フリガナ", class: "col-sm-4 from-control" %>
          <%= f.text_field :last_name_kana, class: "col-sm-3" %>
          <%= f.text_field :first_name_kana, class: "col-sm-3" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"郵便番号", class: "col-sm-4 from-control" %>
          <%= f.text_field :post_code, class: "col-sm-3" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"住所", class: "col-sm-4 from-control" %>
          <%= f.text_field :address, class: "col-sm-6" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"電話番号", class: "col-sm-4 from-control" %>
          <%= f.text_field :phone_number, class: "col-sm-3" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"メールアドレス", class: "col-sm-4 from-control" %>
          <%= f.text_field :email, class: "col-sm-5" %>
        </div>

        <div class="form-group col-xs-9">
          <%= f.label :"会員ステータス", class: "col-sm-4 from-control" %>
            <%= f.radio_button :is_deleted, false %>
          　<%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
          　<%= f.radio_button :is_deleted, true %>
          　<%= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
        </div>
      </div>
        <div class="actions  col-xs-9 col-xs-offset-4">
          <%= f.submit '変更を保存する' ,class: "btn btn-success" %>
        </div>
    <% end %>
    </div>
  </div>
</div>