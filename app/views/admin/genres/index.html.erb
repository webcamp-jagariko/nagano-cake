<div class='container margin-y fit-content'>
<h4>ジャンル一覧・追加</h4>
    <div>
      <div class="margin-y">
        <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <%= f.label :name, "ジャンル名" %>
        <%= f.text_field :name, class: "margin-x" %>
        <%= f.submit '新規登録', class: "btn btn-success" %>
        <% end %>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td class="align-middle"><%= genre.name %></td>
            <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>