<div class='container px-5 px-sm-0'>
<h3>ジャンル一覧・追加</h3>
  <div class='row'>
    <div class='col-md-5 mt-3'>
<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
<% end %>

<table class="table mt-3">
  <thead>
    <tr>
      <th>ジャンル名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
      </tr>
  </tbody>
      <% end %>
</table>
    </div>
  </div>
</div>