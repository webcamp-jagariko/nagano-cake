<div class="container" style="width: fit-content">

  <div class="sub_container_position">
      <h4><span>管理者ログイン</span></h4>
      <br>
       <%= form_with model: @admin, url: admin_session_path do |f| %>
         <div class="field">
           <%= f.label :email, "メールアドレス", class: "field-width" %>
           <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@example.com" %>
         </div>
         <div class="field">
           <%= f.label :password ,"パスワード", class: "field-width" %>
           <%= f.password_field :password, autocomplete: "current-password" %>
         </div>
      <br>
         <div class="actions text-center">
           <%= f.submit "ログイン", class: "btn btn-info btn-primary mb-2 sign_in padding-x" %>
         </div>
        <% end %>
       <%= render "admin/shared/links" %>
   </div>
  </div>
</div>
