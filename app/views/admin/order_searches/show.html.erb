<div class="container w-75">
  <div class="margin-y">
    <div class="d-flex align-items-center justify-content-between">
      <h4><%= @order.customer.last_name %> <%= @order.customer.first_name %>様 注文履歴一覧</h4>
    </div>
    <table class='table margin-y'>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to order.created_at.strftime('%Y年%m月%d日 %H:%M:%S'), admin_order_path(order.id) %></td>
          <td><%# order.quantity %></td>
          <td><%# status %></td>
        </tr>
        <% end %>

      </tbody>
    </table>
    <%= paginate @orders %>
  </div>
</div>